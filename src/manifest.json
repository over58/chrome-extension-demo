{
  "name": "new-tab-page",
  "description": "A Vue.js web extension",
  "version": 0.1,
  "manifest_version": 2,
  "icons": {
    "48": "icons/icon_48.png",
    "128": "icons/icon_128.png"
  },
  "browser_action": {
    "default_title": "new-tab-page",
    "default_icon": "icons/icon_48.png",
    "default_popup": "popup/popup.html"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["./content.js"]
    }
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "chrome_url_overrides": {
    "newtab": "tab/tab.html"
  },
  "permissions": [
    "storage",
    "notifications",
    "contextMenus",
    "bookmarks",
    "tabs",
    "activeTab"
  ],
  "web_accessible_resources": [
    "./inject.css", 
    "./injectJs.js"
  ]
}
